<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#a8e4ff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_store_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#a8e4ff"
            android:drawableTop="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="   Koreatech 스마트 학생회 활동 기록부"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#03A9F4"
        android:orientation="vertical">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/koreatech_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="상점"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="- 대즐 3000원 쿠폰 (3 SIM)"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="" />
        <Button
            android:id="@+id/button_store_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="-40dp"
            android:background="#03A9F4"
            android:text="선택"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:text="- 대즐 5000원 쿠폰 (5 SIM)"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="" />
        <Button
            android:id="@+id/button_store_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="-40dp"
            android:background="#03A9F4"
            android:text="선택"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:text="- 능수관 쿠폰 (5 SIM)"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="" />
        <Button
            android:id="@+id/button_store_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="-40dp"
            android:background="#03A9F4"
            android:text="선택"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:text="- 학용품 세트 (3 SIM)"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="" />
        <Button
            android:id="@+id/button_store_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="-40dp"
            android:background="#03A9F4"
            android:text="선택"
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>